<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/review.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Preloader Styles -->
    <style>
        /* Preloader Styles */
        .preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            transition: opacity 0.8s ease-out, visibility 0.8s ease-out, filter 0.8s ease-out;
            margin: 0;
            padding: 0;
            filter: blur(0px);
            animation: blurIn 0.6s ease-out;
            visibility: visible;
            opacity: 1;
        }

        .preloader.fade-out {
            opacity: 0;
            visibility: hidden;
            filter: blur(10px);
            animation: blurOut 0.8s ease-in;
        }

        .preloader.fade-out .preloader-content {
            animation: fadeOut 0.8s ease-in;
        }

        /* Blur and Fade animations */
        @keyframes blurIn {
            0% {
                filter: blur(15px);
                opacity: 0;
                transform: scale(0.95);
            }
            50% {
                filter: blur(8px);
                opacity: 0.5;
                transform: scale(0.98);
            }
            100% {
                filter: blur(0px);
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes blurOut {
            0% {
                filter: blur(0px);
                opacity: 1;
                transform: scale(1);
            }
            50% {
                filter: blur(5px);
                opacity: 0.5;
                transform: scale(0.98);
            }
            100% {
                filter: blur(15px);
                opacity: 0;
                transform: scale(0.95);
            }
        }

        /* Additional fade animations */
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeOut {
            0% {
                opacity: 1;
                transform: translateY(0);
            }
            100% {
                opacity: 0;
                transform: translateY(-20px);
            }
        }

        .preloader-content {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            animation: fadeIn 0.8s ease-out 0.2s both;
        }

        #spiral {
            width: 400px;
            height: 400px;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            filter: blur(0px);
            transition: filter 0.3s ease-out;
            position: relative;
            animation: rotateSpiral 20s linear infinite, fadeIn 1s ease-out 0.4s both;
        }

        @keyframes rotateSpiral {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        /* Loading placeholder for spiral */
        #spiral::before {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            border: 2px solid #000;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            opacity: var(--spinner-opacity, 0.3);
            transition: opacity 0.3s ease-out;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Spiral dots styling */
        #spiral circle {
            fill: #000;
            opacity: 0.6;
        }

        /* Mobile responsive preloader */
        @media (max-width: 768px) {
            #spiral {
                width: 300px;
                height: 300px;
                margin: 0;
                animation: rotateSpiral 20s linear infinite;
            }
        }

        @media (max-width: 480px) {
            #spiral {
                width: 250px;
                height: 250px;
                margin: 0;
                animation: rotateSpiral 20s linear infinite;
            }
        }

        /* Prevent flash of unstyled content */
        body {
            visibility: hidden;
        }

        body.preloader-ready {
            visibility: visible;
        }
    </style>
    
    <script>
        // Golden Spiral Preloader - Start immediately in head
        (function() {
            const N = 600; // total dots
            const SIZE = 400; // SVG px
            const DOT_RADIUS = 2; // px
            const MARGIN = 2; // px padding
            const DURATION = 3; // seconds per pulse cycle (exactly 3 seconds)
            const GOLDEN_ANGLE = Math.PI * (3 - Math.sqrt(5)); // 2π/φ²
            const CENTER = SIZE / 2;
            const MAX_RADIUS = CENTER - MARGIN - DOT_RADIUS;
            const svgNS = "http://www.w3.org/2000/svg";
            
            // Wait for spiral element to be available
            function createSpiral() {
                const spiralElement = document.getElementById("spiral");
                if (spiralElement) {
                    // Hide the placeholder spinner
                    spiralElement.style.setProperty('--spinner-opacity', '0');
                    
                    // Create SVG root
                    const svg = document.createElementNS(svgNS, "svg");
                    svg.setAttribute("width", SIZE);
                    svg.setAttribute("height", SIZE);
                    svg.setAttribute("viewBox", `0 0 ${SIZE} ${SIZE}`);
                    spiralElement.appendChild(svg);
                    
                    // Generate & animate dots
                    for (let i = 0; i < N; i++) {
                        const idx = i + 0.5;
                        const frac = idx / N;
                        const r = Math.sqrt(frac) * MAX_RADIUS;
                        const theta = idx * GOLDEN_ANGLE;
                        const x = CENTER + r * Math.cos(theta);
                        const y = CENTER + r * Math.sin(theta);
                        
                        // Perfect SVG circle
                        const c = document.createElementNS(svgNS, "circle");
                        c.setAttribute("cx", x);
                        c.setAttribute("cy", y);
                        c.setAttribute("r", DOT_RADIUS);
                        svg.appendChild(c);
                        
                        // Radius pulse
                        const animR = document.createElementNS(svgNS, "animate");
                        animR.setAttribute("attributeName", "r");
                        animR.setAttribute(
                            "values",
                            `${DOT_RADIUS * 0.1};${DOT_RADIUS * 3.0};${DOT_RADIUS * 0.1}`
                        );
                        animR.setAttribute("dur", `${DURATION}s`);
                        animR.setAttribute("begin", `${frac * DURATION}s`);
                        animR.setAttribute("repeatCount", "indefinite");
                        animR.setAttribute("calcMode", "spline");
                        animR.setAttribute("keySplines", "0.4 0 0.6 1;0.4 0 0.6 1");
                        c.appendChild(animR);
                        
                        // Opacity pulse
                        const animO = document.createElementNS(svgNS, "animate");
                        animO.setAttribute("attributeName", "opacity");
                        animO.setAttribute("values", "0.3;1;0.3");
                        animO.setAttribute("dur", `${DURATION}s`);
                        animO.setAttribute("begin", `${frac * DURATION}s`);
                        animO.setAttribute("repeatCount", "indefinite");
                        animO.setAttribute("calcMode", "spline");
                        animO.setAttribute("keySplines", "0.4 0 0.6 1;0.4 0 0.6 1");
                        c.appendChild(animO);
                    }
                } else {
                    // If element not ready, try again in next frame
                    requestAnimationFrame(createSpiral);
                }
            }
            
            // Start creating spiral immediately
            createSpiral();
            
            // Show body once preloader is ready
            document.body.classList.add('preloader-ready');
        })();
    </script>
</head>
<body>
<!-- Preloader -->
<div id="preloader" class="preloader" style="display: flex;">
    <div class="preloader-content">
        <div id="spiral"></div>
    </div>
</div>

    <!-- Banner Section -->
    <div class="banner-section">
        <img src="<%= bannerImage %>" alt="Review Banner" class="banner-image">
    </div>

    <!-- Review Section -->
    <section class="review-section">
        <div class="container">
            <div class="review-content">
                <h1 class="review-title">
                    <% if (userData) { %>
                        How was your experience with <strong><%= userData.name %></strong>?
                    <% } else { %>
                        How was your experience?
                    <% } %>
                </h1>
                <p class="review-subtitle">
                    <% if (userData) { %>
                        We value your opinion about <strong><%= userData.name %></strong> and would love to hear about your experience
                    <% } else { %>
                        We value your opinion and would love to hear about your experience
                    <% } %>
                </p>
                
                <!-- Star Rating -->
                <div class="rating-container">
                    <div class="star-wrapper">
                        <a href="#" class="fas fa-star s1" data-rating="1"></a>
                        <a href="#" class="fas fa-star s2" data-rating="2"></a>
                        <a href="#" class="fas fa-star s3" data-rating="3"></a>
                        <a href="#" class="fas fa-star s4" data-rating="4"></a>
                        <a href="#" class="fas fa-star s5" data-rating="5"></a>
                    </div>
                </div>

                <!-- Action Buttons Section -->
                <div class="action-buttons-container" id="actionButtonsContainer" style="display: none;">
                    <h3>Quick Actions</h3>
                    <div class="action-buttons-grid" id="actionButtonsGrid">
                        <!-- Buttons will be dynamically added here -->
                    </div>
                </div>

                <!-- Review Form -->
                <form class="review-form" id="reviewForm">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Submit Review
                    </button>
                </form>

                <!-- Thank You Message -->
                <div class="thank-you" id="thankYou" style="display: none;">
                    <h2><i class="fas fa-check-circle"></i> Thank You!</h2>
                    <p>Your feedback has been submitted successfully. We truly appreciate your time!</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="review-footer">
        <div class="footer-content">
            <h3>Stay Connected</h3>
            <div class="social-links" id="socialLinksContainer">
                <!-- Social links will be dynamically loaded here -->
            </div>
        </div>
    </footer>

    <script src="/js/script.js"></script>
    <script src="/js/review.js"></script>
    
    <script>
        // Preloader functionality
        window.addEventListener('load', function() {
            // Hide preloader after exactly 3 seconds
            setTimeout(function() {
                const preloader = document.getElementById('preloader');
                if (preloader) {
                    preloader.classList.add('fade-out');
                    // Remove preloader from DOM after animation
                    setTimeout(function() {
                        preloader.remove();
                        // Ensure body is visible after preloader is removed
                        document.body.classList.add('preloader-ready');
                        document.body.style.visibility = 'visible';
                    }, 800);
                }
            }, 3000); // Show preloader for exactly 3 seconds
        });

        // Track review page visit
        document.addEventListener('DOMContentLoaded', function() {
            // Get BIS parameter from URL
            const urlParams = new URLSearchParams(window.location.search);
            const businessNumber = urlParams.get('BIS');
            
            if (businessNumber) {
                // Track the visit
                trackVisit(businessNumber);
            }
        });

        async function trackVisit(businessNumber) {
            try {
                const response = await fetch('/api/track-visit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        businessNumber: businessNumber
                    })
                });

                if (response.ok) {
                    console.log('Visit tracked successfully for:', businessNumber);
                } else {
                    console.error('Failed to track visit');
                }
            } catch (error) {
                console.error('Error tracking visit:', error);
            }
        }
    </script>
</body>
</html>
